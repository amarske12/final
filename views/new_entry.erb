<div class="container">
    <div class="row">        
        <div class="col-md-12">
            <h1> Log Entry: <%= @spot[:name] %> </h1>
        </div>    
    </div>    
    <div class="row mt-3">
        <div class="col-md-12">
            <form action="/spots/<%= @spot[:id]%>/entrys/create">
                <div class="form-row">
                    <div class="form-group col-md-4">
                        <label for="user_id">Name</label>
                        <input class="form-control" name="user_id" type="text" placeholder= <%= @current_user_info[:name] %> disabled>
                    </div>
                    <div class="form-group col-md-3">
                        <label for="date">Date</label>
                        <input type="text" class="form-control" name="date">
                    </div>
                    <div class="form-group col-md-5">
                        <label for="conditions">Conditions</label>
                        <input type="text" class="form-control" name="conditions">
                    </div>
                </div>
                <div class = "row mt-5">
                    <div class="col-md-12">
                        <h3 class = "sub_head"> Catch Details </h3>
                    </div>
                </div>  
                <div class="form row">
                    <div class="form-group col-sm-6">
                        <label for="species">Species</label>
                        <input type="text" class="form-control" name="species">
                    </div>
                    <div class="form-group col-sm-6">
                        <label for="lure_used">Lure Used</label>
                        <input type="text" class="form-control" name="lure_used">
                    </div>
                </div>
                <div class="form row">
                    <div class="form-group col-sm-6">
                        <label for="quantity">Quantity</label>
                        <input type="text" class="form-control" name="quantity">
                    </div>
                    <div class="form-group col-sm-6">
                        <label for="time">Time of Day</label>
                        <input type="text" class="form-control" name="time">
                    </div>
                </div>
                <div class="form row">
                    <div class="form-group col-sm-6">    
                        <label for="weight">Weight (lbs)</label>
                        <input type="text" class="form-control" name="weight">
                    </div>
                    <div class="form-group col-sm-6">    
                        <label for="water_temp">Water Temperature</label>
                        <input type="text" class="form-control" name="water_temp">
                    </div>
                </div>
                <button type="submit" class="btn btn-dark">Submit</button>
            </form>
        </div>    
    </div>
</div>

