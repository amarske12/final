
<div class="container spot_list">
    <div class="row">
        <div class="col-md-12">    
            <h1 class="the_header"> Fishin Log - Spot Tracker </h1> 
        </div>
    </div>
    <div class="row">
        <div class="col-md-12"    
            <ul class="list-group list-group-flush">     
                <% for spot in @spots %>
                    <li class="list-group-item"><a href= "/spots/<%= spot[:id] %>"><%= spot[:name] %></a></li>
                <% end %>
                </ul>
        </div>
    </div>    
</div>